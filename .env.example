# ==========================================
# EXAMPLE ENVIRONMENT VARIABLES
# Copy this file to .env and fill with your actual values
# NEVER commit .env to version control
# ==========================================

# Security - REQUIRED
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE-THIS-TO-A-RANDOM-64-CHARACTER-HEX-STRING

# Database - REQUIRED
POSTGRES_USER=your-database-username
POSTGRES_PASSWORD=CHANGE-THIS-TO-A-SECURE-PASSWORD
POSTGRES_DB=jobmarket

# Database URL (for backend) - Auto-constructed from above
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Application Settings
DEBUG=False
ENVIRONMENT=production

# CORS Origins (comma-separated)
# Production example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost

# Email Configuration (for password reset, verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@yourdomain.com
SMTP_TLS=True

# File Upload Settings
MAX_UPLOAD_SIZE=5242880
UPLOAD_DIR=./uploads

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_ENABLED=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Error Tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Security Headers
ENABLE_SECURITY_HEADERS=True

# Session
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict
